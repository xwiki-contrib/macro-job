<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.contrib</groupId>
    <artifactId>parent-platform</artifactId>
    <version>15.10</version>
  </parent>
  <artifactId>macro-job-parent</artifactId>
  <version>2.2.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Job Macro (parent)</name>
  <description>Job Macro allows running asynchronous scripts with progression bar and logs</description>
  <properties>
    <xwiki.release.jira.skip>false</xwiki.release.jira.skip>
    <xwiki.issueManagement.jira.id>JOBMACRO</xwiki.issueManagement.jira.id>
  </properties>

  <scm>
    <connection>scm:git:git://github.com/xwiki-contrib/macro-job.git</connection>
    <developerConnection>scm:git:git@github.com:xwiki-contrib/macro-job.git</developerConnection>
    <url>https://github.com/xwiki-contrib/macro-job/tree/master</url>
    <tag>HEAD</tag>
  </scm>

  <developers>
    <developer>
      <id>dgervalle</id>
      <name>Denis Gervalle</name>
    </developer>
  </developers>

  <modules>
    <module>macro-job</module>
    <module>macro-job-ui</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.revapi</groupId>
        <artifactId>revapi-maven-plugin</artifactId>
        <configuration>
          <analysisConfiguration>
            <revapi.ignore>
              <item>
                <code>java.annotation.added</code>
                <old>method void org.xwiki.contrib.jobmacro.JobMacroParameters::setSerialize(java.lang.String)</old>
                <new>method void org.xwiki.contrib.jobmacro.JobMacroParameters::setSerialize(java.lang.String)</new>
                <annotation>@org.xwiki.properties.annotation.PropertyDisplayHidden</annotation>
              </item>
            </revapi.ignore>
          </analysisConfiguration>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
